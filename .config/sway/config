### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l


set $term kitty
set $menu rofi -show drun
set $browser firefox

exec_always ~/.config/sway/randomBG.sh &

# Displays and Workspace

output DP-2 pos 2560 480 res 3440x1440@99.982Hz
output DP-3 pos 0 480 res 2560x1440@144Hz
output HDMI-A-1 pos 6000 0 res 1080x1920@60Hz transform 270 subpixel vrgb

workspace 1 output DP-2
workspace 2 output DP-2
workspace 3 output DP-2
workspace 4 output DP-2
workspace 5 output DP-3
workspace 6 output DP-3
workspace 7 output DP-3
workspace 8 output HDMI-A-1
workspace 9 output HDMI-A-1
workspace 10 output HDMI-A-1

### Idle configuration
#
# Example configuration:
#
exec swayidle -w \
        timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
        before-sleep 'swaylock -f -c 000000'


# Input Configuration

input "type:mouse" {
    pointer_accel -1

}

input "type:keyboard" {
    xkb_options caps:escape
    xkb_layout eu
    xkb_numlock enable
    pointer_accel -0.5
}

# Border

default_border pixel 1
default_floating_border pixel 1

gaps outer 10
gaps inner 10

client.focused #c6624b #c6624b #c6624b #c6624b #c6624b
client.unfocused #dad3ba #dad3ba #dad3ba #dad3ba #dad3ba


# Cursor Settings

seat seat0 xcursor_theme "NieR Hack"
exec_always gsettings set org.gnome.desktop.interface cursor-theme "NieR Hack"
seat seat0 hide_cursor 30000



# Status Bar:

bar swaybar_command waybar

# Other Files

include /home/kirato/.config/sway/config.d/*
include /etc/sway/config.d/*
